{
  "name": "anki-renderer",
  "version": "0.1.0",
  "description": "Anki card template renderer compiled to WebAssembly",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./component": {
      "types": "./dist/component.d.ts",
      "import": "./dist/component.js",
      "default": "./dist/component.js"
    },
    "./pkg/*": "./pkg/*"
  },
  "files": [
    "dist/",
    "pkg/",
    "pkg-node/"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build --target web --out-dir pkg",
    "build:wasm:node": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:ts": "tsc -p js/tsconfig.json",
    "build": "npm run build:wasm && npm run build:wasm:node && npm run build:ts && npm run postbuild",
    "postbuild": "node scripts/postbuild.js",
    "prepublishOnly": "npm run build",
    "test": "cargo test",
    "test:wasm": "wasm-pack test --headless --chrome",
    "test:js": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "npx playwright test",
    "typecheck": "tsc -p js/tsconfig.json --noEmit",
    "lint": "cargo clippy -- -D warnings",
    "clean": "cargo clean && rm -rf pkg pkg-node dist",
    "demo:install": "cd demo && npm install",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gilbetrar/anki-renderer.git"
  },
  "keywords": [
    "anki",
    "flashcards",
    "wasm",
    "webassembly",
    "template",
    "renderer"
  ],
  "author": "Ben Bateman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gilbetrar/anki-renderer/issues"
  },
  "homepage": "https://github.com/Gilbetrar/anki-renderer#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "serve": "^14.2.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  }
}
